<body class="bg_image">
  

<div class="form">
  <h2>Sign Up</h2>
    <%= form_for @user do |form| %>
    <%= render 'shared/error_messages' %>

    <%= form.text_field :name, class: 'form-control', placeholder: "Name"%>
    <%= form.date_field :dob, placeholder:"DOB"%>
    <%= form.email_field :email, class: 'form-control', placeholder:"Email"%>
    <%= form.password_field :password, class: 'form-control', placeholder:"Password"%>
    <%= form.password_field :password_confirmation, class: 'form-control', placeholder:"Password Confirmation"%>
    <%= form.file_field :avatar %>

    <%= form.submit "Create Account", class:"btn btn-primary btn-block btn-large"%>
  <% end %>
  </div>


<script>
  hide_newpost()
  hide_timeline()
  hide_profile()
  hide_logout()
  hide_editProfile()
</script>

</body>
