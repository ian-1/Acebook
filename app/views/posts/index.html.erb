                  <%=image_tag("default_avatar.png", :class => "post-avatar")%>
                <% end %> <!-- 12--><!-- d-->
              <% end %> <!-- 11--><!-- c-->
        </div>
        <div class="poster-name-link">
            <% if user.id == post.user_id %> <!-- 8--><!-- e-->
